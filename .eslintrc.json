{
    "extends": "airbnb",
    "globals": {
        "fetch": false,
        "window": true
    },
    "rules": {
        "object-curly-spacing": [2, "always"],
        "react/prefer-stateless-function": "off",
        "react/jsx-filename-extension": [
            1,
            {
                "extensions": [
                    ".js",
                    ".jsx"
                ]
            }
        ],
        "jsx-a11y/anchor-is-valid": [ "error", {
            "components": [
                "Link"
            ],
            "specialLink": [
                "to",
                "hrefLeft",
                "hrefRight"
            ],
            "aspects": [
                "noHref",
                "invalidHref",
                "preferButton"
            ]
        }]
    }
}